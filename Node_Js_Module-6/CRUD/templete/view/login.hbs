<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <span class="text-success">{{usermsg}}</span>
      <span class="text-danger">{{alert}}</span>
      <span class="text-danger">{{loginmsg}}</span>
      <form action="/loginuser" method="post">
        <h2 class="text-center">User Login</h2>

        <div class="form-group">
          <input class="form-control" type="email" name="email" id="" />
          <label for="">Email</label>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="pass" id="" />
          <label for="">Password</label>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-success">Login</button>
          <button type="reset" class="btn btn-danger">Reset</button>
        </div>
        <div>
          <p>Dont have an account?<a href="/form">click here </a></p>
        </div>
      </form>
    </div>

  </body>
</html>