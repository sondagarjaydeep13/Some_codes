<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h2 class="text-center">User-login-form</h2>
      <span class="text-danger">{{loginerror}}</span>

      <form action="/loginuser" method="post">

        <div>
          <input class="form-control" type="text" name="email" id="" />
          <label for="email">Email</label>
        </div>
        <div>
          <input class="form-control" type="text" name="password" id="" />
          <label for="password">Password</label>
        </div>

        <center>
          <button class="btn btn-success" type="submit">Login</button>
          <button class="btn btn-danger">Reset</button>
        </center>
      </form>
      <div><p>Dont have an account ?<a href="/register"> Register</a></p></div>
    </div>

  </body>
</html>