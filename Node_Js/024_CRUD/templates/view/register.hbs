<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h2 class="text-center">User-login-form</h2>
      <span class="text-success">{{registermsg}}</span>
      <form action="/adduser" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="uname" id="" />
          <label for="username">Username</label>
        </div>
        <div>
          <input class="form-control" type="text" name="email" id="" />
          <label for="username">Email</label>
        </div>
        <div>
          <input class="form-control" type="text" name="password" id="" />
          <label for="username">Password</label>
        </div>
        <div style="margin-top: 10px;" class="form-group">

          <select class="form-control" name="gender" id="">
            <option value="male">Male</option>
            <option value="female">female</option>
            <option value="other">other</option>
          </select>
          <label for="gender">Gender</label>

        </div>
        <center>
          <button class="btn btn-success" type="submit">Register</button>
          <button class="btn btn-danger">Reset</button>
        </center>
      </form>
      <div><p>Already have an account ?<a href="/login">
            Register</a></p></div>
    </div>

  </body>
</html>