<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

  </head>
  <body>
    <div class="container">
      <h1 class="h1 text-muted text-center">Registration System</h1>

      <div class="row">
        <div class="col-md-5">
          <form action="adduser" method="post">
            <input type="hidden" name="_id" id="_id" value="{{edata._id}}" />
            <div class="form-group">
              <label class="" for="uname">UserName</label>
              <input
                type="text"
                name="uname"
                id="uname"
                class="form-control"
                value="{{edata.uname}}"
              />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input
                type="text"
                name="email"
                id="email"
                class="form-control"
                value="{{edata.email}}"
              />
            </div>
            <div class="form-group">
              <label for="pass">PassWord</label>
              <input
                type="text"
                name="pass"
                id="pass"
                class="form-control"
                value="{{edata.pass}}"
              />
            </div>
            <div class="form-group">
              <input
                type="submit"
                name=""
                id="submit"
                class="btn btn-success"
              />
              <input type="reset" name="" id="reset" class="btn btn-danger" />

            </div>
          </form>
        </div>

        <div class="col-md-7">
          <table class="table">
            <thead class="thead-dark">

              <tr>
                <th>Username</th>
                <th>Email</th>
                <th colspan="2">Action</th>
              </tr>

            </thead>
            <tbody>
              {{#each udata}}
                <tr>
                  <td>{{this.uname}}</td>
                  <td>{{this.email}}</td>
                  <td><a
                      class="btn btn-primary"
                      href="edit?eid={{this._id}}"
                    >Edit</a></td>
                  <td><a
                      class="btn btn-danger"
                      href="delete?did={{this._id}}"
                    >Delete</a></td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>